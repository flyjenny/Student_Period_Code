<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="你已完成授权"
		android:textSize="18sp" android:paddingTop="14dip" />

	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:autoLink="all"
		android:text="@string/helps_auth_ed" />

	<ImageView android:id="@+id/pic"
		android:scaleType="centerInside" android:padding="10dip"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />

	<TextView android:id="@+id/nickname" android:layout_width="fill_parent"
	android:scaleType="centerInside" android:paddingLeft="10dip"
		android:layout_height="wrap_content" 
		android:text="" />

	<TextView android:id="@+id/url" android:layout_width="fill_parent"
		android:layout_height="wrap_content"  
		android:scaleType="centerInside" android:paddingLeft="10dip"
		android:text="" />

	<TextView android:id="@+id/created_date" android:layout_width="fill_parent"
	android:scaleType="centerInside" android:paddingLeft="10dip"
		android:layout_height="wrap_content" 
		android:text="" />
		
	<TextView android:id="@+id/homepage" android:layout_width="fill_parent"
	android:scaleType="centerInside" android:paddingLeft="10dip"
		android:layout_height="wrap_content"  android:autoLink="all"
		android:text="" />


</LinearLayout>
